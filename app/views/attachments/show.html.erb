<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @attachment.name %>
</p>

<% if @attachment.attachment.attached? %>
  <% if @attachment.attachment.representable? %>
    <%= attachment_tag url_for(@attachment.attachment.representation(resize: "200x200").processed) %>
  <% else %>
    <%= attachment_tag url_for(@attachment.attachment), class: "variant-1" %>
  <% end %>
<% else %>
  No Attachment
<% end %>

<%= link_to 'Edit', nested_helper_url(resource_name: "attachments", action: :edit, behaveable: @behaveable, resource: @attachment) %> |
<%= link_to 'Back', nested_helper_url(resource_name: "attachments", behaveable: @behaveable) %>
