#!/usr/bin/env bash

source ./bin/init-env

docker-compose run --rm wait-middleware

docker-compose run --rm \
  -e DB_PORT=${DB_PORT} \
  -e DB_HOST=${DB_HOST} \
  -e DB_USER=${DB_USER} \
  -e DB_PASSWORD=${DB_PASSWORD} \
  -e CAPYBARA_SERVER_PORT=${CAPYBARA_SERVER_PORT} \
  -e CAPYBARA_SERVER_HOST=${CAPYBARA_SERVER_HOST} \
  capybara bash -c "RAILS_ENV=test PARALLEL_WORKERS=1 bin/rails test:system"