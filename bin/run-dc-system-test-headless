#!/usr/bin/env bash

source ./bin/init-env

docker-compose run --rm wait-middleware

docker-compose run --rm \
  -e DB_PORT=${DB_PORT} \
  -e DB_HOST=${DB_HOST} \
  -e DB_USER=${DB_USER} \
  -e DB_PASSWORD=${DB_PASSWORD} \
  -e CHROME_HEADLESS=true \
  -e HUB_URL=${HUB_URL} \
  chromedriver bash -c "bin/rails test:system"
