#!/usr/bin/env bash

source ./bin/init-env

docker-compose run --rm wait-middleware

# docker-compose run --rm --use-aliases web bin/rails test:system
docker-compose run --rm \
  -e DB_PORT=${DB_PORT} \
  -e DB_HOST=${DB_HOST} \
  -e DB_USER=${DB_USER} \
  -e DB_PASSWORD=${DB_PASSWORD} \
  -e SELENIUM_HUB_URL=http://selenium-hub:4444/wd/hub \
  -e TEST_APP_HOST=web \
  -e TEST_APP_PORT=3001 \
   console bin/rails test:system
